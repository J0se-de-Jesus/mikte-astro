---
// src/layouts/BaseLayout.astro
const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title || 'Mikte Cervecería'}</title>
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>
  <body>
    <header class="header">
      <div class="container">
        <h1>Mikte Cervecería</h1>
        <nav class="nav">
          <a href="/">Inicio</a>
          <a href="/productos">Productos</a>
          <a href="/contacto">Contacto</a>
        </nav>
      </div>
    </header>

    <main class="main">
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <p>&copy; 2025 Mikte Cervecería. Todos los derechos reservados.</p>
      </div>
    </footer>
  </body>
</html>